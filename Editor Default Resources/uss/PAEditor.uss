#AnimationDropDown
{
	min-width: 200px;
	margin-bottom:1px;
	margin-left: -1px;
}

ToolbarMenu
{
	margin-bottom: 1px;
	padding-left: 10px;
	padding-right: 10px;	
}

#Toolbar > ToolbarMenu
{
	margin-left: -2px;
}

#Canvas 
{
	background-color: #2A2A2A;
}

#CenterPane
{
	width: 100%;
}

.imageButton
{
    padding: 4px;
}

.imageButton>Image
{
    width: 24px;
    height: 24px;
}

.imageButton:hover
{
    background-color:#444444;
    border-radius: 2px;
}

ScrollView
{
	margin-top: 0px;
	margin-right: 4px;
	margin-bottom: 4px;
}

#ImageView {
    margin: auto;
}

#BottomPane 
{
	border-top-width: 1px;
	border-color: #232323;
	flex-shrink: 0;
	height: 118px;
}

#BottomPane > ScrollView 
{
	margin-top: 0px;
}

#BottomPane > ScrollView > * > #unity-content-container
{
	flex-direction: row;
	padding-left: 8px;
	padding-right: 8px;
}

#BottomPane > ScrollView > #unity-content-viewport
{
	flex-direction: row;
}

#Editor
{
	position: Absolute;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
}

#Frames
{
	overflow: Scroll;
}

#Frames > #ItemsContainer
{
	flex-direction: row;
	overflow: Visible;
	flex-shrink: 0;
}

.frame
{
	padding: 4px;
	height: 72px;
}

.frame > Image
{
	width: 64px;
	height: 64px;
	min-height: 64px;
	min-width: 64px;
	background-color: #2A2A2A;
}

#FramesToolbar
{
	flex-direction: row;
	border-bottom-width: 1px;
	border-color: #232323;
}

#FramesToolbar>.imageButton
{
    margin-top: 1px;
	margin-bottom: 1px;
}

#FramesToolbar>.imageButton.selected
{
    background-color:#505050;
}

#FramesToolbar > .spacer
{
	flex-grow: 1;
}

.layer
{
	margin-left: 4px;
	margin-right: 4px;
	padding-right: 8px;
}

.layer > #Preview
{
    width: 32px;
    height: 32px;
    border-width: 1px;
    border-color: #666666;
    margin-right: 8px;
    background-color: #2A2A2A;
}

.layer
{
    flex-direction: row;
    height: 40px;
    align-items: Center;
    border-color: #313131;
    border-top-width: 1px;
}

.layer > .imageToggle
{
    margin-right: 8px;
}

.layer > Label
{
	margin-right: auto;
	flex-grow: 1;
}

#Layers
{
	border-bottom-width: 1px;
	border-color: #232323;
}

#LayersPane > ScrollView
{
	margin-top: 0px;	
}

#LayersToolbar
{
	flex-direction: row;
}

#LayersToolbar > .spacer
{
	flex-grow: 1;
}

#LayersToolbar > .imageButton
{
	width: 24px;
	height: 24px;
}

#RightPane
{
	border-left-width: 1px;
	border-color: #232323;
	flex-shrink: 0;
}

#Preview
{
	width: 32px;
	height: 32px;
	border-width: 1px;
    border-color: #666666;
    background-color: #2A2A2A;
	margin: auto;
}

#PreviewPane
{
	height: 100px;
	border-bottom-width: 1px;
	border-color: #232323;
	padding: 16px;
}

#ZoomSlider
{
	min-width: 80px;
	width: 80px;
	margin-right: 16px;
}

#Toolbar
{
	height: 24px;
}

#Toolbar > * > .noz-imageToggle-checked
{
    background-color: #505050;
    border-color: #505050;
}

#Toolbar > * > .noz-imageToggle 
{
    padding: 2px 4px 1px 4px;
    width: 22px;
    height: 19px;
    margin-right: 2px;
}

#Toolbox
{
	height: 100%;
	width: 42px;
	padding: 4px;
	padding-top: 16px;
	border-right-width: 1px;
	border-color: #232323;
	overflow: visible;
	flex-shrink: 0;
}

#Toolbox>.imageButton
{
    min-width: 32px;
	width: 32px;
    min-height: 32px;
	height: 32px;
    padding: 4px;
    margin-bottom: 4px;
}

#Toolbox>.imageButton.selected
{
    background-color:#505050;
	border-radius: 3px;
}

#Toolbox > ColorField
{
    border-color: #BBBBBB;
    border-width: 1;
    margin-bottom: 4px;
    margin-top: 8px;
    padding: 1px;
    width:28px;
}

#TopPane
{
	flex-grow: 1;
}

#VisibleToggle
{
	margin-left: 8px;
	margin-right: 8px;
}

#Workspace
{
	margin-top: 24px;
	flex-direction: row;
	flex-shrink: 0;
	flex-grow: 0;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	position: Absolute;
}

#WorkspaceToolbar
{
	flex-direction: row;
	margin-left: auto;
}

